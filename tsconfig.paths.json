{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@assets/*": ["assets/*"],
            "@assets": ["assets/index.ts"],
            "@constants/*": ["constants/*"],
            "@constants": ["constants/index.ts"],
            "@modules/*": ["modules/*"],
            "@modules": ["modules/index.ts"],
            "@layouts/*": ["layouts/*"],
            "@layouts": ["layouts/index.ts"],
            "@pages/*": ["pages/*"],
            "@pages": ["pages/index.ts"],
            "@state/*": ["state/*"],
            "@state": ["state/index.ts"],
            "@styled/*": ["styled/*"],
            "@styled": ["styled/index.ts"],
            "@utils/*": ["utils/*"],
            "@utils": ["utils/index.ts"]
        }
    }
}
